@page
@model Lab4.Pages.AcademicRecordManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AcademicRecord</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AcademicRecord.Student)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.AcademicRecord.Student.Id)
        @Html.DisplayFor(model => model.AcademicRecord.Student.Name)
    </dd>
</dl>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Course)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.AcademicRecord.CourseCode)
        @Html.DisplayFor(model => model.AcademicRecord.CourseCodeNavigation.Title)
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcademicRecord.CourseCode" />
            <input type="hidden" asp-for="AcademicRecord.StudentId" />

            <div class="form-group">
                <label asp-for="AcademicRecord.Grade" class="control-label"></label>
                <input asp-for="AcademicRecord.Grade" class="form-control" />
                <span asp-validation-for="AcademicRecord.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
