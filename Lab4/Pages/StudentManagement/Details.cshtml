@page
@model Lab4.Pages.StudentManagement.DetailsModel
@using DataAccess
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>
</div>
<div>
    <h4>Academic Records</h4>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-for="@Html.DisplayNameFor(model => model.AcademicRecord.CourseCodeNavigation.Title)" asp-route-orderby="">Course</a>
                </th>
                <th>
                    <a asp-for="@Html.DisplayNameFor(model => model.AcademicRecord.Grade)" asp-route-orderby="">Grade</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student.AcademicRecords)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseCodeNavigation.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
